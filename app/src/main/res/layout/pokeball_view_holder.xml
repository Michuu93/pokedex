<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              tools:ignore="UseCompoundDrawables" android:paddingLeft="16dp" android:paddingRight="16dp"
              android:foreground="?android:attr/selectableItemBackground" android:orientation="vertical"
              android:gravity="center_horizontal">

    <ImageView
            android:id="@+id/pokemonSimpleImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:ignore="ContentDescription" android:padding="5dp"/>
    <TextView
            android:id="@+id/pokemonSimpleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="14sp"
            android:textStyle="bold" android:gravity="center"
            android:textColor="@color/primaryTextColor"/>

</LinearLayout>